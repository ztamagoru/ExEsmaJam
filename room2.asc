  if (button == eMouseRight) ClaimEvent();
  else {
    player.ChangeRoom(1);
    //player.StopMoving();
    }
}


function oStartButton_AnyClick(MouseButton button)
{
  on_mouse_click(button);
  
  //player.ChangeRoom(1,  60,  180);
