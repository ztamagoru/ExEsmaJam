function room_RepExec()
{
  Object *obj = Object.GetAtScreenXY(mouse.x,  mouse.y);
  
  if (obj != null) {
    Mouse.Mode = eModeLookat;
  }
  else {
    Mouse.Mode = eModeWalkto;
  }
}
